      {"worker_id": "W004", "worker_name": "Diana Cho", "skill_level": "Senior", "process_id": "P004", "process_name": "Visual Inspection", "complexity_level": "Low", "cycle_time_sec": 35.0, "match_score": 60, "recommendation": "Overqualified. Reassign to higher complexity process."}
    ],
